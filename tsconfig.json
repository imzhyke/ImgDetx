{
  "extends": "expo/tsconfig.base",
"compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Ensures correct path resolution
    "paths": {
      "@/*": ["src/*"] // Enables absolute imports if needed
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}